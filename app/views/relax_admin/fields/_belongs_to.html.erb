<%= f.label a, class: "form-control-label #{required?(f.object, a).present? ? 'required' : ''}" %>
<%= f.collection_select a.to_s + '_id', class_name_from_association(f.object, a).constantize.all.limit(20), :id, object_label(class_name_from_association(f.object, a)), {prompt: t('relax_admin.view.select_model', model_name: class_name_from_association(f.object, a).constantize.model_name.human.downcase)}, class: 'selectize-single', required: required?(f.object, a).present? %>
