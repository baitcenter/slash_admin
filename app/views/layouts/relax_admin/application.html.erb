<!DOCTYPE html>
<html>
<head>
  <title><%= t('relax_admin.view.administration') %></title>
  <%= stylesheet_link_tag    "relax_admin/application", media: "all", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "relax_admin/application", 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'relax_admin/favicon.png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.6.0/js/froala_editor.pkgd.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body id="admin-dashboard" class="<% if session[:compact].present? %>page-sidebar-closed<% end %>">
  <noscript>
    <%= t('relax_admin.view.enable_javascript_html') %>
  </noscript>

  <%= render 'relax_admin/shared/header' %>

  <div class="page-container">
    <%= render 'relax_admin/shared/menu' %>
    <div class="page-content">
      <%= render 'relax_admin/shared/sub_header' %>
      <%= render 'relax_admin/shared/breadcrumb' %>
      <%= yield %>
    </div>
  </div>

  <div class="scroll-to-top">
    <i class="icon-arrow-up"></i>
  </div>

  <%= toastr_bootstrap %>
</body>

</body>
</html>
